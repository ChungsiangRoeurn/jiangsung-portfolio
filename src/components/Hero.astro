---
import type { HeroProps } from "@types";

interface Props extends HeroProps {}

const { name, specialty, summary1, summary2, email } = Astro.props;
---

<section
  class="min-h-[85vh] text-white flex flex-col justify-center items-center relative px-4"
>
  <div
    class="animate-slide-in-left max-w-screen-2xl mx-auto grid grid-cols-1 md:grid-cols-2 gap-12 lg:gap-16 items-center"
    style="animation-delay: 0.2s"
  >
    <div class="space-y-8 text-center md:text-left">
      <h1
        class="text-5xl sm:text-6xl font-extrabold tracking-tight text-[#F5D0A9] leading-[1.3]"
      >
        {name}
      </h1>
      <h2 class="text-2xl sm:text-3xl text-white font-medium leading-[1.5]">
        {specialty}
      </h2>

      <a
        href={`mailto:${email}`}
        class="inline-block mt-4 bg-[#F5D0A9] text-[#2C2824] px-7 py-3 rounded-md font-semibold shadow-md hover:shadow-lg transition hover:-translate-y-0.5"
      >
        Contact Me
      </a>
    </div>

    <div
      class="text-neutral-300 text-lg leading-[1.8] border-l-4 border-[#F5D0A9] pl-8 space-y-6"
    >
      <p>
        {summary1}
      </p>
      <p>{summary2}</p>
    </div>
  </div>

  <div
    class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 size-64 bg-[#F5D0A9]/10 rounded-full blur-[120px] z-[-1] animate-pulse"
  >
  </div>
</section>
